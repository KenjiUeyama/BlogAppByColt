<%- include("partials/header") %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" required>
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" required>
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" rows="8" cols="80" value="Blog Post goes here" required><%= blog.body %></textarea>

    </div>

    <button class="ui violet big basic button" type="submit" name="button" required>Submit</button>
  </form>
</div>

<%- include("partials/footer") %>
